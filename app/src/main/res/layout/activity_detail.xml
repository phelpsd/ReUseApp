<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="20dp"
                android:text="@string/name_text"
                android:id="@+id/bus_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:text="@string/web_text"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:clickable="true"
                android:textColor="@color/link_blue"
                android:onClick="onClick_web"
                android:id="@+id/website" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:text="@string/web_exp"
                android:id="@+id/web_exp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:text="@string/ph_text"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:clickable="true"
                android:textColor="@color/link_blue"
                android:onClick="onClick_phone"
                android:id="@+id/phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:text="@string/ph_exp"
                android:id="@+id/ph_exp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:text="@string/add_text"
                android:id="@+id/address"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:clickable="true"
                android:textColor="@color/link_blue"
                android:onClick="onClick_map"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:text="@string/map_exp"
                android:id="@+id/map_exp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="@string/item_accept"
                android:id="@+id/item_title" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/item_title" />

        </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="70dp"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
            <!--android:text="items"-->
            <!--android:id="@+id/items" />-->

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="250dp" />

</LinearLayout>